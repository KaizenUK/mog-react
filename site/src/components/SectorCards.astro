---
import type { NavSector } from "../lib/sanity/navigation";

type Props = {
  sectors: NavSector[];
};

const { sectors } = Astro.props;
---

<section class="sectors">
  <div class="sectors__inner">

    <p class="sectors__eyebrow">Industries We Serve</p>
    <p class="sectors__lead">
      High-performance lubricants and oils manufactured for automotive, agricultural, industrial, commercial vehicle, and manufacturing sectors â€” with over 250 specialist products available.
    </p>

    {sectors.length > 0 && (
      <div class="sectors__grid">
        {sectors.map((sector) => (
          <a class="sector-card" href={`/sectors/${sector.slug}`}>
            <h3 class="sector-card__title">{sector.title}</h3>
            {sector.summary && (
              <p class="sector-card__summary">{sector.summary}</p>
            )}
            <span class="sector-card__link">Explore &rarr;</span>
          </a>
        ))}
      </div>
    )}
  </div>
</section>

<style>
  .sectors {
    background: var(--page-bg);
    padding: var(--section-py) var(--section-px);
    border-top: 1px solid var(--border-subtle);
  }

  .sectors__inner {
    max-width: var(--page-max);
    margin: 0 auto;
  }

  .sectors__eyebrow {
    font-family: var(--font-heading);
    font-size: 11px;
    font-weight: 400;
    letter-spacing: 0.22em;
    text-transform: uppercase;
    color: var(--nav-accent);
    margin: 0 0 20px;
  }

  .sectors__lead {
    font-family: var(--font-body);
    font-size: clamp(16px, 1.6vw, 18px);
    line-height: 1.75;
    color: var(--text-secondary);
    max-width: 680px;
    margin: 0 0 48px;
  }

  .sectors__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1px;
    background: var(--border-subtle);
    border: 1px solid var(--border-subtle);
  }

  .sector-card {
    display: flex;
    flex-direction: column;
    gap: 10px;
    padding: 28px 24px;
    background: var(--page-bg);
    text-decoration: none;
    border-left: 3px solid transparent;
    transition: border-color 200ms ease, background 200ms ease;
  }

  .sector-card:hover {
    border-left-color: var(--nav-accent);
    background: rgba(200, 160, 52, 0.04);
  }

  .sector-card__title {
    font-family: var(--font-heading);
    font-size: 16px;
    font-weight: 600;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: var(--text-primary);
    margin: 0;
  }

  .sector-card__summary {
    font-family: var(--font-body);
    font-size: 14px;
    line-height: 1.65;
    color: var(--text-muted);
    margin: 0;
    flex: 1;
  }

  .sector-card__link {
    font-family: var(--font-heading);
    font-size: 11px;
    letter-spacing: 0.16em;
    text-transform: uppercase;
    color: var(--nav-accent);
    margin-top: 4px;
  }

  @media (max-width: 900px) {
    .sectors__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 540px) {
    .sectors__grid {
      grid-template-columns: 1fr;
    }
  }
</style>
